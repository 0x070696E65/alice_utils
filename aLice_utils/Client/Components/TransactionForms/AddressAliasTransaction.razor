@using BlazorStrap
@using aLice_utils.Shared.Models.Transaction

<BSRow MarginBottom="Margins.Medium">
    <BSInputGroup>
        <span class="@BS.Input_Group_Text">SignerPublicKey</span>
        <BSInput InputType="InputType.Text" placeholder="空欄の場合はaLiceアカウント" @bind-Value="InnerTransaction.SignerPublicKey"/>
    </BSInputGroup>
    <ValidationMessage For="@(() => InnerTransaction.SignerPublicKey)" />
</BSRow>
<BSRow MarginBottom="Margins.Medium">
    <BSInputGroup>
        <span class="@BS.Input_Group_Text">NamespaceId</span>
        <BSInput InputType="InputType.Text" placeholder="NamespaceId" @bind-Value="InnerTransaction.NamespaceId"/>
    </BSInputGroup>
    <ValidationMessage For="@(() => InnerTransaction.NamespaceId)" />
</BSRow>
<BSRow MarginBottom="Margins.Medium">
    <BSInputGroup>
        <span class="@BS.Input_Group_Text">Address</span>
        <BSInput InputType="InputType.Text" placeholder="Address" @bind-Value="InnerTransaction.Address"/>
    </BSInputGroup>
    <ValidationMessage For="@(() => InnerTransaction.Address)" />
</BSRow>
<BSRow MarginBottom="Margins.Medium">
    <BSInputGroup>
        <span class="@BS.Input_Group_Text">AliasAction</span>
        <BSInputCheckbox CheckedValue="@("LINK")" @bind-Value="InnerTransaction.AliasAction" UnCheckedValue="@("UNLINK")" IsToggle="true" Color="BSColor.Secondary">
            @InnerTransaction.AliasAction
        </BSInputCheckbox>
    </BSInputGroup>
</BSRow>
@code {
    [Parameter]
    public InnerAddressAliasTransaction InnerTransaction { get; set; } = new ();
    
    [Parameter]
    public TransactionMeta TransactionMeta { get; set; } = new ();
    
    [Parameter]
    public bool IsInner { get; set; } = false;
}