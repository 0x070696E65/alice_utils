@using BlazorStrap
@using aLice_utils.Shared.Models.Transaction

<BSRow MarginBottom="Margins.Medium">
    <BSInputGroup>
        <span class="@BS.Input_Group_Text">SignerPublicKey</span>
        <BSInput InputType="InputType.Text" placeholder="空欄の場合はaLiceアカウント" @bind-Value="InnerTransaction.SignerPublicKey"/>
    </BSInputGroup>
    <ValidationMessage For="@(() => InnerTransaction.SignerPublicKey)" />
</BSRow>
<BSRow MarginBottom="Margins.Medium">
    <BSInputGroup>
        <span class="@BS.Input_Group_Text">LinkedPublicKey</span>
        <BSInput InputType="InputType.Text" placeholder="LinkedPublicKey" @bind-Value="InnerTransaction.LinkedPublicKey"/>
    </BSInputGroup>
    <ValidationMessage For="@(() => InnerTransaction.LinkedPublicKey)" />
</BSRow>
<BSRow MarginBottom="Margins.Medium">
    <BSInputGroup>
        <span class="@BS.Input_Group_Text">LinkAction</span>
        <BSInputCheckbox CheckedValue="@("LINK")" @bind-Value="InnerTransaction.LinkAction" UnCheckedValue="@("UNLINK")" IsToggle="true" Color="BSColor.Secondary">
            @InnerTransaction.LinkAction
        </BSInputCheckbox>
    </BSInputGroup>
</BSRow>
@code {
    [Parameter]
    public InnerAccountKeyLinkTransaction InnerTransaction { get; set; } = new ();
    
    [Parameter]
    public TransactionMeta TransactionMeta { get; set; } = new ();
    
    [Parameter]
    public bool IsInner { get; set; } = false;
}