@using BlazorStrap
@using aLice_utils.Shared.Models.Transaction
@using CatSdk.Facade
@using CatSdk.Symbol
@using CatSdk.Utils

@if (IsInner)
{
    <BSRow MarginBottom="Margins.Medium">
        <BSInputGroup>
            <span class="@BS.Input_Group_Text">SignerPublicKey</span>
            <BSInput InputType="InputType.Text" placeholder="空欄の場合はaLiceアカウント" @bind-Value="InnerTransaction.SignerPublicKey"/>
        </BSInputGroup>
        <ValidationMessage For="@(() => InnerTransaction.SignerPublicKey)"/>
    </BSRow>
    <BSRow MarginBottom="Margins.Medium">
        <BSInputGroup>
            <span class="@BS.Input_Group_Text">Signature</span>
            <BSInput InputType="InputType.Text" placeholder="Signature" @bind-Value="InnerTransaction.Signature"/>
        </BSInputGroup>
        <ValidationMessage For="@(() => InnerTransaction.Signature)"/>
    </BSRow>
    <BSRow MarginBottom="Margins.Medium">
        <BSInputGroup>
            <span class="@BS.Input_Group_Text">Hash</span>
            <BSInput InputType="InputType.Text" placeholder="Hash" @bind-Value="InnerTransaction.Hash"/>
        </BSInputGroup>
        <ValidationMessage For="@(() => InnerTransaction.Hash)"/>
    </BSRow>
}
else
{
    <BSRow MarginBottom="Margins.Medium">
        <BSInputGroup>
            <span class="@BS.Input_Group_Text">SignedPayload</span>
            <BSInput InputType="InputType.TextArea" placeholder="SignedPayload" @bind-Value="InnerTransaction.SignedPayload"/>
        </BSInputGroup>
        <ValidationMessage For="@(() => InnerTransaction.SignedPayload)" />
    </BSRow>
    <BSRow MarginBottom="Margins.Medium">
        <BSInputGroup>
            <BSInputSwitch CheckedValue="@("true")" UnCheckedValue="@("false")" @bind-Value="InnerTransaction.IsAnnounce">
                Announce @InnerTransaction.IsAnnounce</BSInputSwitch>
        </BSInputGroup>
    </BSRow>    
}

@code {
    [Parameter]
    public InnerCosignatureTransaction InnerTransaction { get; set; } = new ();
    
    [Parameter]
    public TransactionMeta TransactionMeta { get; set; } = new ();
    
    [Parameter]
    public bool IsAnnounceDisabled { get; set; } = false;
    
    [Parameter]
    public bool IsInner { get; set; } = false;
}